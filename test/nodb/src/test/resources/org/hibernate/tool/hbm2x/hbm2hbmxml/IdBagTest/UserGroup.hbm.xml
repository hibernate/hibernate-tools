<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"https://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- 

  This mapping demonstrates how to use an idbag to represent
  a many-to-many association where the association table has
  a surrogate key.
     
-->

<hibernate-mapping package="org.hibernate.tool.hbm2x.hbm2hbmxml.IdBagTest">
	
	<class name="User" table="`Users`">
		<id name="name"/>
		
		<idbag name="groups" 
				order-by="groupName asc" 
				table="`UserGroups`" lazy="false" access="field">
			<collection-id column="userGroupId" 
					type="long">
				<generator class="increment"/>
			</collection-id>
			<key column="userName"/>
			<many-to-many column="groupName" 
					class="Group"/>
		</idbag>
		
	</class>
	
	<class name="Group" table="`Groups`">
		<id name="name"/>
	</class>
	

</hibernate-mapping>
